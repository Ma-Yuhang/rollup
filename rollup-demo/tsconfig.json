{
  "compilerOptions": {
    // 目标语言的版本
    "target": "es5",
    // 目标语言的模块化方案
    "module": "esnext",
    // 编译过程中需要引入的库文件的列表
    "lib": ["dom", "dom.iterable", "esnext"],
    // 是否允许从没有设置默认导出的模块中默认导入
    "esModuleInterop": true,
    // 是否将每个文件作为单独的模块
    "isolatedModules": true,
    // 使用严格模式
    "strict": true,
    // 跳过对引用库的类型检查
    "skipLibCheck": true,
    // 强制保持文件名的大小写一致性
    "forceConsistentCasingInFileNames": true,
    // 指定模块解析策略为 Bundler，表示使用打包工具来解析模块路径
    "moduleResolution": "Bundler",
    // 允许导入 JSON 文件作为模块
    "resolveJsonModule": true,
    // 禁止 TypeScript 编译器生成任何 JavaScript 文件
    "noEmit": true
  },
  "include": ["src/**/*.ts", "rollup.config.ts"],
  "exclude": ["node_modules"]
}
