{
  "compilerOptions": {
    // 目标语言的版本
    "target": "es5",
    // 目标语言的模块化方案
    "module": "ESNext",
    // 编译过程中需要引入的库文件的列表
    "lib": ["dom", "dom.iterable", "esnext"],
    // 允许以 ES 模块的形式导入 CommonJS 模块。
    "esModuleInterop": true,
    // 是否将每个文件作为单独的模块
    "isolatedModules": true,
    // 使用严格模式
    "strict": true,
    "jsx": "preserve",
    // 跳过对引用库的类型检查
    "skipLibCheck": true,
    // 强制保持文件名的大小写一致性
    "forceConsistentCasingInFileNames": true,
    // 指定模块解析策略为 Bundler，表示使用打包工具来解析模块路径
    "moduleResolution": "Node",
    // 允许导入 JSON 文件作为模块
    "resolveJsonModule": true,
    // 禁止 TypeScript 编译器生成任何 JavaScript 文件
    "noEmit": true,
    "baseUrl": "./",
    "paths": {
      "@/*": ["src/*"]
    }
  },
  "include": ["src/**/*.ts", "src/**/*.tsx", "rollup.config.ts", "global.d.ts"],
  "exclude": ["node_modules"]
}
